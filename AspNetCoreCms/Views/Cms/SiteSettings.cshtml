@model AspNetCoreCms.Models.Site
@{
    ViewData["Title"] = "Site Settings";
}

<h2>@ViewData["Title"].</h2>

<form method="post" asp-action="SiteSettings">
    <div class="form-group form-inline row">
        <label class="col-md-2 text-right" asp-for="DomainName">Domain:</label>
        <div class="col-md-4">
            <input asp-for="DomainName" class="form-control" />
            <span asp-validation-for="DomainName"></span>
        </div>
    </div>
    <div class="form-group form-inline row">
        <label class="col-md-2 text-right" asp-for="Title">Title:</label>
        <div class="col-md-4">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>
    </div>
    <div class="form-group form-inline row">
        <label class="col-md-2 text-right" asp-for="Theme">Theme:</label>
        <div class="col-md-4">
            <input asp-for="Theme" class="form-control" />
            <span asp-validation-for="Theme"></span>
        </div>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-default">Save</button>
</form>